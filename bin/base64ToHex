#!/usr/bin/env python3
import sys, base64, binascii

if len(sys.argv) != 2:
    print(f"Usage: {sys.argv[0]} <base64string>")
    sys.exit(1)

b64_str = sys.argv[1]
try:
    data = base64.b64decode(b64_str, validate=True)
except binascii.Error:
    print("Invalid base64 input.")
    sys.exit(1)

print(data.hex())
