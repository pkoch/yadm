export PS1="\$(old_ret=\$?; if [ \$old_ret != '0' ]; then echo '⚠️  ' \$old_ret ; echo '\n'; fi)\$(status=\$(yadm -c color.status=always status -s | cut -c1-20 | sed 's/^/|/' | sed 's/\".*//' | sed 's/ [.A-Za-z0-9/_-]*$/|/' | sed 's/^ \*//' | sort | uniq -c | sed 's/^ \+//' | paste -sd ' ' -); branch_lag=\$(yadm -c color.status=always status -sb | head -n 1 | cut -d' ' -f3-); if [ "'"'"\${status}\${branch_lag}"'"'" != '' ]; then echo '🏠 ' \$status \$branch_lag ; echo '\n'; fi)\$(date "+%Y/%m/%dT%T%z")\n\u@\h:\w\n\$ "
